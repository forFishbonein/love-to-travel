<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lovetotravel.user.mapper.UserMapper">

    <select id="getByTeacherId" resultType="com.lovetotravel.user.entity.User">
        select * from user u inner join login l
        <where>
            t1.teacher_id = t2.teacher_id
            and
            <if test="id != null and id != ''">
                t1.teacher_id = #{id}
            </if>
        </where>
    </select>
    <select id="getAll" resultType="com.lovetotravel.user.entity.User">
        select * from teacher t1 inner join teacher_info t2
        <where>
            t1.deleted = '0'
        </where>
    </select>


</mapper>